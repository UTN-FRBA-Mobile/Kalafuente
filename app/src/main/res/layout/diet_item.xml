<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    style="@style/AppTheme.CardSettingView"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp">

            <RadioButton
                android:id="@+id/dietRadioButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="false"
                android:gravity="center" />

            <TextView
                android:id="@+id/dietName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/dietRadioButton"
                android:text="Vegetariano"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dietDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dietName"
                android:layout_alignStart="@+id/dietName"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="No como carne ni pescado"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>